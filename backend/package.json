{
  "name": "karere-backend",
  "version": "0.6.3",
  "description": "Baileys backend for the Karere WhatsApp client.",
  "main": "backend.js",
  "type": "module",
  "scripts": {
    "start": "node backend.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint *.js tests/**/*.js",
    "lint:fix": "eslint *.js tests/**/*.js --fix"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "gtk"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.18",
    "node-cron": "^3.0.3",
    "pino": "^9.7.0",
    "qrcode": "^1.5.4",
    "sqlite3": "^5.1.6",
    "whatsapp-web.js": "^1.30.0",
    "winston": "^3.11.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^6.3.4",
    "ws": "^8.18.2"
  },
  "overrides": {
    "tar-fs": "^3.0.4",
    "ws": "^8.18.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!backend.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
