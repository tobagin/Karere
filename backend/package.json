{
  "name": "karere-backend",
  "version": "0.6.3",
  "description": "Baileys backend for the Karere WhatsApp client.",
  "main": "backend.js",

  "type": "module",
  "scripts": {
    "start": "node backend.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint *.js tests/**/*.js",
    "lint:fix": "eslint *.js tests/**/*.js --fix"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "gtk"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.18",
    "qrcode": "^1.5.4",
    "ws": "^8.18.2",
    "winston": "^3.11.0",
    "sqlite3": "^5.1.6",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "supertest": "^6.3.4",
    "ws": "^8.18.2",
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!backend.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}
