<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1.0"/>
  <template class="KarereWindow" parent="AdwApplicationWindow">
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <property name="title">Karere</property>
    <property name="content">
      <object class="AdwToastOverlay" id="toast_overlay">
        <property name="child">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="AdwHeaderBar" id="header_bar"/>
            </child>
            <child>
                <object class="GtkStack" id="main_stack">
                    <property name="vexpand">true</property>
                    <!-- Connecting View -->
                    <child>
                        <object class="GtkStackPage">
                            <property name="name">connecting_view</property>
                            <property name="title">Connecting</property>
                            <property name="child">
                                <object class="AdwStatusPage">
                                    <property name="title">Connecting to WhatsApp</property>
                                    <property name="description">Please wait...</property>
                                    <property name="child">
                                        <object class="GtkSpinner">
                                            <property name="spinning">true</property>
                                        </object>
                                    </property>
                                </object>
                            </property>
                        </object>
                    </child>
                    <!-- New Reconnecting View -->
                    <child>
                        <object class="GtkStackPage">
                            <property name="name">reconnecting_view</property>
                            <property name="title">Reconnecting</property>
                            <property name="child">
                                <object class="AdwStatusPage">
                                    <property name="title">Connection Lost</property>
                                    <property name="description">Attempting to reconnect to the backend service...</property>
                                    <property name="child">
                                        <object class="GtkSpinner">
                                            <property name="spinning">true</property>
                                        </object>
                                    </property>
                                </object>
                            </property>
                        </object>
                    </child>
                    <!-- QR Code View -->
                    <child>
                        <object class="GtkStackPage">
                            <property name="name">qr_view</property>
                            <property name="title">Login</property>
                            <property name="child">
                                <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="valign">center</property>
                                    <property name="halign">center</property>
                                    <property name="spacing">20</property>
                                    <child>
                                        <object class="GtkLabel">
                                            <property name="label">Scan QR Code with WhatsApp</property>
                                            <attributes>
                                                <attribute name="weight" value="bold"></attribute>
                                                <attribute name="scale" value="1.5"></attribute>
                                            </attributes>
                                        </object>
                                    </child>
                                    <child>
                                        <object class="GtkOverlay">
                                            <property name="child">
                                                <object class="GtkImage" id="qr_image">
                                                    <property name="width-request">250</property>
                                                    <property name="height-request">250</property>
                                                    <property name="visible">false</property>
                                                </object>
                                            </property>
                                            <child type="overlay">
                                                <object class="GtkSpinner" id="qr_spinner">
                                                     <property name="spinning">true</property>
                                                     <property name="halign">center</property>
                                                     <property name="valign">center</property>
                                                </object>
                                            </child>
                                        </object>
                                    </child>
                                </object>
                            </property>
                        </object>
                    </child>
                    <!-- Chat View -->
                    <child>
                        <object class="GtkStackPage">
                            <property name="name">chat_view</property>
                            <property name="title">Chats</property>
                            <property name="child">
                                <object class="AdwNavigationSplitView" id="split_view">
                                    <property name="sidebar">
                                        <object class="AdwNavigationPage">
                                            <property name="title">Chats</property>
                                            <property name="tag">chats-page</property>
                                            <child type="suffix">
                                                <object class="GtkToggleButton" id="search_button">
                                                    <property name="icon-name">system-search-symbolic</property>
                                                    <property name="tooltip-text">Search chats</property>
                                                </object>
                                            </child>
                                            <property name="child">
                                                <object class="GtkBox">
                                                    <property name="orientation">vertical</property>
                                                    <!-- Search Bar -->
                                                    <child>
                                                        <object class="GtkSearchBar" id="search_bar">
                                                            <property name="child">
                                                                <object class="GtkSearchEntry" id="search_entry">
                                                                    <property name="placeholder-text">Search chats...</property>
                                                                    <property name="hexpand">true</property>
                                                                </object>
                                                            </property>
                                                        </object>
                                                    </child>
                                                    <!-- Chat List -->
                                                    <child>
                                                        <object class="GtkScrolledWindow">
                                                            <property name="vexpand">true</property>
                                                            <property name="child">
                                                                <object class="GtkListBox" id="chat_list_box"/>
                                                            </property>
                                                        </object>
                                                    </child>
                                                </object>
                                            </property>
                                        </object>
                                    </property>
                                    <property name="content">
                                        <object class="GtkStack" id="message_stack">
                                            <!-- Welcome View -->
                                            <child>
                                                <object class="GtkStackPage">
                                                    <property name="name">welcome_view</property>
                                                    <property name="child">
                                                         <object class="AdwStatusPage">
                                                            <property name="title">Welcome to Karere</property>
                                                            <property name="description">Select a chat to start messaging.</property>
                                                            <property name="icon-name">org.gnome.Characters-symbolic</property>
                                                        </object>
                                                    </property>
                                                </object>
                                            </child>
                                            <!-- Message View -->
                                            <child>
                                                <object class="GtkStackPage">
                                                    <property name="name">message_view</property>
                                                    <property name="child">
                                                        <object class="GtkBox">
                                                            <property name="orientation">vertical</property>
                                                            <!-- Chat Header -->
                                                            <child>
                                                                <object class="AdwHeaderBar" id="chat_header">
                                                                    <property name="title-widget">
                                                                        <object class="GtkLabel" id="chat_title_label">
                                                                            <property name="label">Chat</property>
                                                                            <property name="ellipsize">end</property>
                                                                        </object>
                                                                    </property>
                                                                </object>
                                                            </child>
                                                            <!-- Messages Area -->
                                                            <child>
                                                                <object class="GtkBox">
                                                                    <property name="orientation">vertical</property>
                                                                    <property name="vexpand">true</property>
                                                                    <child>
                                                                        <object class="GtkScrolledWindow" id="messages_scrolled">
                                                                            <property name="vexpand">true</property>
                                                                            <property name="hscrollbar-policy">never</property>
                                                                            <property name="child">
                                                                                <object class="GtkListBox" id="messages_list_box">
                                                                                    <property name="selection-mode">none</property>
                                                                                    <style>
                                                                                        <class name="background"/>
                                                                                    </style>
                                                                                </object>
                                                                            </property>
                                                                        </object>
                                                                    </child>
                                                                    <!-- Typing Indicator -->
                                                                    <child>
                                                                        <object class="GtkRevealer" id="typing_revealer">
                                                                            <property name="reveal-child">false</property>
                                                                            <property name="transition-type">slide-up</property>
                                                                            <property name="child">
                                                                                <object class="GtkBox" id="typing_indicator">
                                                                                    <property name="orientation">horizontal</property>
                                                                                    <property name="spacing">8</property>
                                                                                    <property name="margin-start">12</property>
                                                                                    <property name="margin-end">12</property>
                                                                                    <property name="margin-top">4</property>
                                                                                    <property name="margin-bottom">4</property>
                                                                                    <child>
                                                                                        <object class="GtkSpinner" id="typing_spinner">
                                                                                            <property name="spinning">true</property>
                                                                                            <property name="width-request">16</property>
                                                                                            <property name="height-request">16</property>
                                                                                        </object>
                                                                                    </child>
                                                                                    <child>
                                                                                        <object class="GtkLabel" id="typing_label">
                                                                                            <property name="label">typing...</property>
                                                                                            <style>
                                                                                                <class name="dim-label"/>
                                                                                                <class name="caption"/>
                                                                                            </style>
                                                                                        </object>
                                                                                    </child>
                                                                                </object>
                                                                            </property>
                                                                        </object>
                                                                    </child>
                                                                </object>
                                                            </child>
                                                            <!-- Message Input Area -->
                                                            <child>
                                                                <object class="GtkBox" id="message_input_box">
                                                                    <property name="orientation">horizontal</property>
                                                                    <property name="spacing">8</property>
                                                                    <property name="margin-start">12</property>
                                                                    <property name="margin-end">12</property>
                                                                    <property name="margin-top">8</property>
                                                                    <property name="margin-bottom">12</property>
                                                                    <child>
                                                                        <object class="GtkEntry" id="message_entry">
                                                                            <property name="hexpand">true</property>
                                                                            <property name="placeholder-text">Type a message...</property>
                                                                        </object>
                                                                    </child>
                                                                    <child>
                                                                        <object class="GtkButton" id="emoji_button">
                                                                            <property name="icon-name">face-smile-symbolic</property>
                                                                            <property name="tooltip-text">Add emoji</property>
                                                                            <style>
                                                                                <class name="flat"/>
                                                                                <class name="circular"/>
                                                                            </style>
                                                                        </object>
                                                                    </child>
                                                                    <child>
                                                                        <object class="GtkButton" id="send_button">
                                                                            <property name="icon-name">mail-send-symbolic</property>
                                                                            <property name="tooltip-text">Send message</property>
                                                                            <style>
                                                                                <class name="suggested-action"/>
                                                                                <class name="circular"/>
                                                                            </style>
                                                                        </object>
                                                                    </child>
                                                                </object>
                                                            </child>
                                                        </object>
                                                    </property>
                                                </object>
                                            </child>
                                        </object>
                                    </property>
                                </object>
                            </property>
                        </object>
                    </child>
                </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
